        .tire-card:hover { transform: translateY(-2px); box-shadow: 0 4px 8px rgba(0,0,0,0.1); }
        .brand { font-size: 0.85em; font-weight: bold; color: #888; text-transform: uppercase; }
        .model { font-size: 1.4em; margin: 5px 0; color: var(--dark); }
        .pos { display: inline-block; background: var(--dark); color: white; padding: 2px 8px; border-radius: 4px; font-size: 0.8em; margin-bottom: 10px; }
        .desc { line-height: 1.4; color: #444; }
        .no-results { text-align: center; padding: 40px; color: #888; }
